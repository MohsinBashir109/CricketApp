{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-native",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    // "typeRoots": ["./node_modules/@types"]
    "typeRoots": ["./node_modules/@types", "./src/@types"]

  },
   "include": [
    "src/**/*",
    "index.ts",
    "index.tsx",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
